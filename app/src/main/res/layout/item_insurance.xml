<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/x20">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_normal_color"
        android:textSize="@dimen/text_size_13_sp" />

    <TextView
        android:id="@+id/item_fee"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y40"
        android:layout_below="@id/item_title"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center_vertical"
        android:text="限时活动"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_12_sp" />

    <TextView
        android:id="@+id/item_sale"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y40"
        android:layout_below="@id/item_title"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:layout_toEndOf="@id/item_fee"
        android:background="@mipmap/ic_insurance_bg"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:textColor="#fff54b"
        android:textSize="@dimen/text_size_13_sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/item_btn"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y44"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_gradient_red"
        android:gravity="center"
        android:text="点击查看"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12_sp" />

</RelativeLayout>
