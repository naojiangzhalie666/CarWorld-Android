<?xml version="1.0" encoding="utf-8"?>
<cn.droidlover.xdroid.views.appbar.ToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:leftSrc="@drawable/icon_back2"
    app:titleColor="@color/text_black"
    app:titleText="调度申请">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/order"
        android:orientation="vertical"
        android:paddingStart="@dimen/x30"
        android:paddingEnd="@dimen/x30"
        android:paddingBottom="@dimen/y30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:background="@drawable/shape_rect_white_btm_10"
            android:orientation="vertical"
            android:paddingTop="@dimen/y20"
            android:paddingBottom="@dimen/y30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="调度权限"
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_16_sp" />

            <TextView
                android:id="@+id/dispatch_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x80"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginEnd="@dimen/x80"
                android:text="调度号可以在平台同时接2个以上的单，有权限给名下司机派单，调度号指派的订单，可以实时定位查看订单详情。调度号发布的客户货源，被司机接单之后，有权限查看订单详情。可以查看司机的运输情况。"
                android:textColor="@color/color_999"
                android:textSize="@dimen/text_size_13_sp" />

            <cn.droidlover.xdroid.views.textView.NoDoubleClickTextView
                android:id="@+id/dispatch_btn"
                android:layout_width="@dimen/x240"
                android:layout_height="@dimen/y60"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/shape_home_btn"
                android:gravity="center"
                android:text="调度申请"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15_sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_dispatch_bg" />
    </LinearLayout>

</cn.droidlover.xdroid.views.appbar.ToolBar>