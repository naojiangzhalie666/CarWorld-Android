<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/y20"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/x20"
    android:layout_marginTop="@dimen/y10"
    android:paddingBottom="@dimen/y20"
    android:layout_marginEnd="@dimen/x20"
    android:background="@drawable/shape_white_rect_10"
    android:orientation="vertical"
    android:paddingStart="@dimen/x20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/x6"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="出发地"
            android:textSize="@dimen/text_size_12_sp"
            android:textStyle="bold"
            app:drawableStartCompat="@mipmap/icon_loc" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_toRightOf="@+id/tv_name"
            android:src="@mipmap/icon_arrive" />

        <TextView
            android:id="@+id/tv_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv"
            android:drawableStart="@mipmap/icon_order_end"
            android:drawablePadding="@dimen/x6"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="目的地"
            android:textSize="@dimen/text_size_12_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20"
            android:layout_toRightOf="@id/tv_name2"
            android:drawablePadding="@dimen/x5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/order"
            android:textSize="@dimen/text_size_14_sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/icon_distance"
                android:drawablePadding="@dimen/x10"
                android:text="距离"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12_sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:drawableStart="@mipmap/icon_type"
                android:drawablePadding="@dimen/x10"
                android:text="车型"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12_sp" />

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:drawableStart="@mipmap/icon_called"
                android:drawablePadding="@dimen/x10"
                android:text="客服"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/x30"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_add_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_name2"
                android:drawableStart="@mipmap/icon_money_increase"
                android:drawablePadding="@dimen/x10"
                android:text="加价"
                android:textColor="@color/order"
                android:textSize="@dimen/text_size_12_sp" />

            <TextView
                android:id="@+id/tv_bc_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_name2"
                android:layout_marginTop="@dimen/y6"
                android:drawableStart="@mipmap/icon_bc_type"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:text="板车"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12_sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_name2"
                android:layout_marginTop="@dimen/y4"
                android:drawableStart="@mipmap/icon_time"
                android:drawablePadding="@dimen/x10"
                android:text="时间"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12_sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_jd"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/x20"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_xb" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:drawableStart="@mipmap/icon_mark"
        android:drawablePadding="@dimen/x10"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:text="怎么可以这么这么这么的常常常常怎么可以这么这么这么的常常常常怎么可以这么这么这么的常常常常"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_12_sp" />

</LinearLayout>