<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="@dimen/x500"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginEnd="@dimen/x30"
        android:background="@drawable/shape_white_rect_10"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y30">

        <ImageView
            android:layout_gravity="end"
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close"
            android:padding="@dimen/x20"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13_sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pop_sale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_circle_sale"
            android:text="发布"
            android:gravity="center"
            android:textSize="@dimen/text_size_15_sp"
            android:textColor="@color/color_666"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pop_buy"
            android:drawableTop="@mipmap/ic_circle_buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_15_sp"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:text="求购"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>