<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/x20"
    android:paddingEnd="@dimen/x20">

    <LinearLayout
        android:layout_width="@dimen/x50"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/steam_line_1"
            android:layout_width="@dimen/x4"
            android:layout_height="@dimen/y16"
            android:background="@color/order" />

        <View
            android:id="@+id/steam_oval"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:background="@drawable/shape_button_red_bg" />

        <View
            android:id="@+id/steam_line_2"
            android:layout_width="@dimen/x4"
            android:layout_height="match_parent"
            android:background="@color/order" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/y10"
        android:paddingBottom="@dimen/y10">

        <TextView
            android:id="@+id/item_steam_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家创建合同"
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_13_sp" />

        <TextView
            android:id="@+id/item_steam_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y6"
            android:text="2021-6-21 9:05"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_11_sp" />

    </LinearLayout>


    <View
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:layout_marginTop="@dimen/y6"
        android:background="@drawable/shape_gradient_blue"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/x20"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/item_steam_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_gradient_blue"
            android:text="等待卖方确认合同"
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_13_sp" />

        <TextView
            android:id="@+id/item_steam_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text="2021-6-21 9:05"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_11_sp" />

    </LinearLayout>
</LinearLayout>