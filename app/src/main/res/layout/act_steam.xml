<?xml version="1.0" encoding="utf-8"?>
<cn.droidlover.xdroid.views.appbar.ToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_up_red"
    android:orientation="vertical"
    app:leftSrc="@drawable/icon_back2"
    app:titleColor="@color/text_dark"
    app:titleText="平台担保">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/x80">

        <TextView
            android:id="@+id/stream_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y60"
            android:letterSpacing="0.1"
            android:text="在线签合同"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stream_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stream_t1"
            android:layout_marginTop="@dimen/y10"
            android:letterSpacing="0.7"
            android:text="快速又安全"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18_sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginEnd="@dimen/x60"
            android:src="@mipmap/ic_stream_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x50"
        android:layout_marginEnd="@dimen/x50"
        android:background="@drawable/shape_white_rect_10"
        android:orientation="vertical"
        android:paddingStart="@dimen/x20"
        android:paddingTop="@dimen/y30"
        android:paddingEnd="@dimen/x20"
        android:paddingBottom="@dimen/y30">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_stream_lc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:drawableStart="@drawable/shape_order"
            android:drawablePadding="@dimen/x10"
            android:paddingStart="@dimen/x10"
            android:paddingEnd="@dimen/x10"
            android:text="费用说明"
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_13_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:text="1、保障金交付"
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_12_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text="双方达成交易，同意按照规则将交易保障金交付平台代管。"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_10_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:text="2、交易确认"
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_12_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text="买家线下看车，或找第三方检测机构确认车况，打款并过户完成交易。"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_10_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:text="3、保障完成"
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_12_sp" />

        <TextView
            android:id="@+id/steam_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_10_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y60"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/steam_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已阅读并同意"
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_12_sp" />

            <TextView
                android:id="@+id/steam_regular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="《车无界平台担保协议》"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_12_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/steam_sale"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y60"
                android:background="@drawable/shape_gradient_red"
                android:gravity="center"
                android:text="我是卖家"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/steam_buy"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y60"
                android:background="@drawable/shape_gradient_blue"
                android:gravity="center"
                android:text="我是买家"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</cn.droidlover.xdroid.views.appbar.ToolBar>