<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginEnd="@dimen/x30"
        android:background="@drawable/shape_white_rect_10"
        android:orientation="vertical"
        android:paddingStart="@dimen/x60"
        android:paddingTop="@dimen/y20"
        android:paddingEnd="@dimen/x60"
        android:paddingBottom="@dimen/y30">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_order"
            android:drawablePadding="@dimen/x10"
            android:text=""
            android:textColor="@color/main_normal_color" />

        <EditText
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/shape_blue_rect_stroke_45"
            android:digits="0123456789"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingStart="@dimen/x30"
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_13_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal"
            android:paddingStart="@dimen/x60"
            android:paddingEnd="@dimen/x60">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y50"
                android:background="@drawable/shape_gradient_blue"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13_sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/x1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y50"
                android:background="@drawable/shape_gradient_red"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13_sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>