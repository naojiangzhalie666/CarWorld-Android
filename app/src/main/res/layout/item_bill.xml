<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y100"
    android:orientation="vertical"
    android:paddingStart="@dimen/x30"
    android:paddingTop="@dimen/y20"
    android:paddingEnd="@dimen/x30">

    <ImageView
        android:id="@+id/item_bill_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_bill_score" />

    <TextView
        android:id="@+id/item_bill_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:layout_toEndOf="@id/item_bill_type"
        android:text="提现申请"
        android:textColor="@color/main_normal_color"
        android:textSize="@dimen/text_size_14_sp" />

    <TextView
        android:id="@+id/item_bill_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_bill_title"
        android:layout_marginStart="@dimen/x10"
        android:layout_toEndOf="@id/item_bill_type"
        android:text="6月13日 19：08"
        android:textColor="@color/main_normal_color"
        android:textSize="@dimen/text_size_12_sp" />

    <TextView
        android:id="@+id/item_bill_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="-200"
        android:textSize="@dimen/text_size_15_sp" />

</RelativeLayout>