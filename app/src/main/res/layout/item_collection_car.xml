<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y300"
    android:paddingStart="@dimen/x20"
    android:paddingEnd="@dimen/x20"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="@dimen/y20"
    android:paddingBottom="@dimen/y20">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/y150"
        android:src="@mipmap/bg_login"
        app:qmui_border_color="@color/white"
        app:qmui_corner_radius="10dp" />

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x20"
        android:layout_toEndOf="@id/iv_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_car"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="@dimen/x430"
            android:layout_height="wrap_content"
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_14_sp" />


        <LinearLayout
            android:layout_marginTop="@dimen/y24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12_sp" />

            <View
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="9dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginRight="5dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tv_gl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12_sp" />
            <TextView
                android:id="@+id/tv_szd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/order"
                android:textSize="@dimen/text_size_14_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_pass"
                android:layout_marginTop="@dimen/y2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批发价："
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_11_sp"/>

            <TextView
                android:id="@+id/tv_jg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order"
                android:textSize="@dimen/text_size_15_sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批发价："
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_11_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order"
                android:textSize="@dimen/text_size_15_sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/collection_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_collection_show"
            android:drawablePadding="@dimen/y10"
            android:gravity="center"
            android:text="取消收藏"
            android:textColor="@color/order"
            android:textSize="@dimen/text_size_13_sp" />

        <TextView
            android:id="@+id/collection_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_share"
            android:drawablePadding="@dimen/y10"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/order"
            android:textSize="@dimen/text_size_13_sp" />
    </LinearLayout>

</RelativeLayout>