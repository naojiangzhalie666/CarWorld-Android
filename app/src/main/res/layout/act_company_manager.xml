<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y70"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/y15"
            android:layout_marginEnd="@dimen/x30"
            android:background="@drawable/shape_bg_white"
            android:drawableStart="@mipmap/icon_find_gray"
            android:drawablePadding="@dimen/x20"
            android:hint="可搜索品牌及车系"
            android:maxLength="10"
            android:paddingStart="@dimen/x50"
            android:textSize="@dimen/text_size_13_sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x60"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginEnd="@dimen/x60"
        android:background="@mipmap/ic_car_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x50"
            android:gravity="center"
            android:text="车源\n--"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20_sp" />

        <cn.droidlover.xdroid.views.textView.NoDoubleClickTextView
            android:id="@+id/car_in"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y60"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x30"
            android:background="@drawable/shape_gradient_red"
            android:gravity="center"
            android:text="入库"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/company_rl_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_all_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="库存"
                android:textSize="@dimen/text_size_13_sp"
                android:textColor="@color/main_normal_color" />

            <View
                android:id="@+id/company_line_0"
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/y5"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:background="@color/order" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/main_bg" />

        <RelativeLayout
            android:id="@+id/company_rl_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_up_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_13_sp"
                android:text="批发"
                android:textColor="@color/main_normal_color" />

            <View
                android:id="@+id/company_line_1"
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/y5"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:background="@color/order"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/main_bg" />

        <RelativeLayout
            android:id="@+id/company_rl_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_down_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_13_sp"
                android:text="自销"
                android:textColor="@color/main_normal_color" />

            <View
                android:id="@+id/company_line_2"
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/y5"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:background="@color/order"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/main_bg" />

        <RelativeLayout
            android:id="@+id/company_rl_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sold_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_13_sp"
                android:text="已售记录"
                android:textColor="@color/main_normal_color" />

            <View
                android:id="@+id/company_line_3"
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/y5"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:background="@color/order"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/company_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20"
            android:text="全选"
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_16_sp"
            android:visibility="gone" />

        <cn.droidlover.xdroid.views.textView.NoDoubleClickTextView
            android:id="@+id/company_edit_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y70"
            android:layout_marginStart="@dimen/x60"
            android:layout_marginEnd="@dimen/x60"
            android:background="@drawable/shape_gradient_blue"
            android:gravity="center"
            android:text="批量操作"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <cn.droidlover.xrecyclerview.XRecyclerContentLayout
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y20"
            android:background="@color/main_bg" />

        <LinearLayout
            android:id="@+id/manager_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_alignParentBottom="true"
            android:background="@color/line_grey"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x60"
            android:paddingEnd="@dimen/x60"
            android:visibility="gone">

            <TextView
                android:id="@+id/company_up"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y60"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginEnd="@dimen/x30"
                android:layout_weight="1"
                android:background="@drawable/shape_button_red_bg"
                android:gravity="center"
                android:text="批发"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/company_down"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y60"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginEnd="@dimen/x30"
                android:layout_weight="1"
                android:background="@drawable/shape_button_org_bg"
                android:gravity="center"
                android:text="自销"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/company_delete"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y60"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginEnd="@dimen/x30"
                android:layout_weight="1"
                android:background="@drawable/shape_button_red_bg"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/company_recover"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y60"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginEnd="@dimen/x30"
                android:layout_weight="1"
                android:background="@drawable/shape_button_org_bg"
                android:gravity="center"
                android:text="恢复"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/company_cancel"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y60"
                android:layout_marginStart="@dimen/x30"
                android:layout_weight="1"
                android:background="@drawable/shape_gradient_blue"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white" />

        </LinearLayout>

        <ImageView
            android:id="@+id/company_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/x60"
            android:layout_marginBottom="@dimen/y60"
            android:src="@mipmap/ic_sale" />

    </RelativeLayout>

</LinearLayout>