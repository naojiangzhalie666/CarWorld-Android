<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/y20"
    android:paddingBottom="@dimen/y20">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/x30"
        android:paddingEnd="@dimen/x30">

        <TextView
            android:id="@+id/item_driver_nikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_info_dd"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:text="陈小缯" />


        <TextView
            android:id="@+id/item_driver_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:drawableStart="@mipmap/icon_bc_type"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:text="蓝牌斜板" />

        <TextView
            android:id="@+id/item_driver_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:drawableStart="@mipmap/ic_info_phone"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:text="13816001870" />

        <TextView
            android:id="@+id/item_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:drawableStart="@mipmap/ic_info_tx"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:text="陈小缯" />


    </LinearLayout>

    <View
        android:layout_width="@dimen/x1"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginBottom="@dimen/y30"
        android:background="@color/line_grey" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <cn.droidlover.xdroid.views.textView.NoDoubleClickTextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y60"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/shape_gradient_blue"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:paddingStart="@dimen/x20"
            android:paddingEnd="@dimen/x20"
            android:text="编辑"
            android:textColor="@color/white" />


        <cn.droidlover.xdroid.views.textView.NoDoubleClickTextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:background="@drawable/shape_button_red_bg"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:paddingStart="@dimen/x20"
            android:paddingEnd="@dimen/x20"
            android:text="删除"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>