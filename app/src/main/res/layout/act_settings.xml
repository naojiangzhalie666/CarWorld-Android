<?xml version="1.0" encoding="utf-8"?>
<cn.droidlover.xdroid.views.appbar.ToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:leftSrc="@drawable/icon_back2"
    app:titleColor="@color/text_dark"
    app:titleText="设置">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:orientation="horizontal"
        android:paddingStart="@dimen/x30"
        android:paddingEnd="@dimen/x30">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="接收消息通知"
                android:textColor="@color/color_666"
                android:textSize="@dimen/text_size_14_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:gravity="center"
                android:text="关闭后将不再对你推送消息通知"
                android:textColor="@color/color_999"
                android:textSize="@dimen/text_size_12_sp" />
        </LinearLayout>

        <cn.droidlover.xdroid.views.SwitchButton
            android:id="@+id/push_switch"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y60"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:isOpened="true"
            app:primaryColor="@color/colorDarkBlue" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="55dp"
        android:background="@color/main_bg" />

    <cn.droidlover.xdroid.views.LeftRightLayout
        android:id="@+id/llyt_psw"
        style="@style/left_right"
        app:arrow="@mipmap/icon_right"
        app:iconImg="@mipmap/icon_psw"
        app:leftTxt="修改密码" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="55dp"
        android:background="@color/main_bg" />

    <cn.droidlover.xdroid.views.LeftRightLayout
        android:id="@+id/llyt_call"
        style="@style/left_right"
        app:arrow="@mipmap/icon_right"
        app:iconImg="@mipmap/icon_call"
        app:leftTxt="联系客服" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="55dp"
        android:background="@color/main_bg" />

    <cn.droidlover.xdroid.views.LeftRightLayout
        android:id="@+id/llyt_advice"
        style="@style/left_right"
        app:arrow="@mipmap/icon_right"
        app:iconImg="@mipmap/icon_advice"
        app:leftTxt="投诉建议" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="55dp"
        android:background="@color/main_bg" />

    <cn.droidlover.xdroid.views.LeftRightLayout
        android:id="@+id/llyt_version"
        style="@style/left_right"
        app:arrow="@mipmap/icon_right"
        app:iconImg="@mipmap/icon_version"
        app:leftTxt="检测版本" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/y120"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <cn.droidlover.xdroid.views.textView.NoDoubleClickButton
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/y70"
            android:background="@drawable/shape_gradient_blue"
            android:text="账号注销"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <cn.droidlover.xdroid.views.textView.NoDoubleClickButton
            android:id="@+id/btn_exit"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/y70"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_gradient_red"
            android:text="退出登录"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_regular1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="《隐私协议》"
            android:textColor="@color/login"
            android:textSize="@dimen/text_size_13_sp" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginBottom="@dimen/y20"
            android:background="@color/line_grey" />

        <TextView
            android:id="@+id/tv_regular2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="《用户服务协议》"
            android:textColor="@color/login"
            android:textSize="@dimen/text_size_13_sp" />

    </LinearLayout>


</cn.droidlover.xdroid.views.appbar.ToolBar>