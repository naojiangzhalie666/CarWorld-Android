<?xml version="1.0" encoding="utf-8"?>
<cn.droidlover.xdroid.views.appbar.ToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:leftSrc="@drawable/icon_back2"
    app:titleColor="@color/text_dark"
    app:titleText="">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/x30"
        android:paddingEnd="@dimen/x30">

        <RelativeLayout
            android:id="@+id/rl_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/shape_white_rect_10"
            android:orientation="vertical"
            android:paddingStart="@dimen/x30"
            android:paddingTop="@dimen/y10"
            android:paddingEnd="@dimen/x30"
            android:paddingBottom="@dimen/y20">

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_company"
                android:layout_marginTop="@dimen/y10"
                android:text="发布者：" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_right" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/shape_white_rect_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="外观/内饰:"
                    android:textColor="@color/main_normal_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_ys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x20"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <include layout="@layout/layout_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70"
                android:layout_marginStart="@dimen/x30"
                android:paddingEnd="@dimen/x30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="上牌地点:"
                    android:textColor="@color/main_normal_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_spd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp" />

            </RelativeLayout>

            <include layout="@layout/layout_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70"
                android:layout_marginLeft="@dimen/x30"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="实际公里数:"
                    android:textColor="@color/main_normal_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_gls"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp" />
            </RelativeLayout>

            <include layout="@layout/layout_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70"
                android:layout_marginStart="@dimen/x30"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="车龄:"
                    android:textColor="@color/main_normal_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_cl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp" />
            </RelativeLayout>

            <include layout="@layout/layout_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70"
                android:layout_marginStart="@dimen/x30"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="求购区域:"
                    android:textColor="@color/main_normal_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_qyyq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp" />
            </RelativeLayout>


            <include layout="@layout/layout_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70"
                android:layout_marginStart="@dimen/x30"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="接受提车距离:"
                    android:textColor="@color/main_normal_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_tcjl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp" />

            </RelativeLayout>


            <include layout="@layout/layout_view" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="期望价格:"
                    android:textColor="@color/main_normal_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/shape_white_rect_10"
            android:orientation="vertical"
            android:paddingStart="@dimen/x20"
            android:paddingTop="@dimen/y20"
            android:paddingEnd="@dimen/x20"
            android:paddingBottom="@dimen/y10">

            <TextView
                android:id="@+id/tv_important"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="重点要求："
                android:textColor="@color/order"
                android:textSize="@dimen/text_size_14_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/y10"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ck_water"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableBottom="@drawable/button_normal_checkbox"
                    android:drawablePadding="@dimen/x10"
                    android:clickable="false"
                    android:text="无泡水"
                    android:visibility="gone"
                    android:textColor="@color/main_normal_color"
                    android:textSize="@dimen/text_size_14_sp" />

                <CheckBox
                    android:id="@+id/ck_fire"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableBottom="@drawable/button_normal_checkbox"
                    android:drawablePadding="@dimen/x10"
                    android:text="无火烧"
                    android:textColor="@color/main_normal_color"
                    android:textSize="@dimen/text_size_14_sp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/ck_accident"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableBottom="@drawable/button_normal_checkbox"
                    android:drawablePadding="@dimen/x10"
                    android:text="无重大事故"
                    android:textColor="@color/main_normal_color"
                    android:textSize="@dimen/text_size_14_sp"
                    android:visibility="gone" />


                <CheckBox
                    android:id="@+id/ck_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableBottom="@drawable/button_normal_checkbox"
                    android:drawablePadding="@dimen/x10"
                    android:text="手续齐全"
                    android:textColor="@color/main_normal_color"
                    android:textSize="@dimen/text_size_14_sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/shape_white_rect_10"
            android:orientation="vertical"
            android:paddingStart="@dimen/x30"
            android:paddingTop="@dimen/y10"
            android:paddingBottom="@dimen/y10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注:"
                android:textColor="@color/main_normal_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/et_ck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:background="@color/transparent"
                android:gravity="top"
                android:text="未填写"
                android:textSize="@dimen/text_size_14_sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/x1"
            android:layout_weight="1" />

        <cn.droidlover.xdroid.views.textView.NoDoubleClickButton
            android:id="@+id/btn_share"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y60"
            android:background="@drawable/shape_gradient_blue"
            android:text="分享"
            android:textColor="@color/white"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/x1"
            android:layout_weight="1"
            android:visibility="gone" />

        <cn.droidlover.xdroid.views.textView.NoDoubleClickButton
            android:id="@+id/btn_link"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y60"
            android:background="@drawable/shape_gradient_red"
            android:text="联系买家"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/x1"
            android:layout_weight="1" />
    </LinearLayout>


</cn.droidlover.xdroid.views.appbar.ToolBar>