<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--    <com.qmuiteam.qmui.widget.QMUITopBar-->
    <!--        android:id="@+id/topbar"-->
    <!--        style="@style/GCTopBar2"-->
    <!--        app:qmui_topbar_left_back_drawable_id="@mipmap/icon_back"-->
    <!--        app:qmui_topbar_title_container_padding_horizontal="20dp"-->
    <!--        app:qmui_topbar_title_gravity="center" />-->
    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="品牌"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/et_pp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableEnd="@mipmap/icon_right"
            android:drawablePadding="@dimen/x10"
            android:gravity="center_vertical|end"
            android:hint="请选择品牌"
            android:maxLength="20"
            android:textSize="@dimen/text_size_13_sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="公司名"
            android:textSize="@dimen/text_size_13_sp" />

        <EditText
            android:id="@+id/et_gsm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="请填写公司名"
            android:maxLength="30"
            android:textSize="@dimen/text_size_13_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y90"
            android:gravity="center_vertical"
            android:text="城市"
            android:textSize="@dimen/text_size_13_sp" />


        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableEnd="@mipmap/icon_right"
            android:drawablePadding="@dimen/x10"
            android:gravity="center_vertical|end"
            android:hint="请选择城市"
            android:maxLength="20"
            android:textSize="@dimen/text_size_13_sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="详细地址"
            android:textSize="@dimen/text_size_13_sp" />

        <EditText
            android:id="@+id/et_dz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="请填写详细地址"
            android:maxLength="100"
            android:textSize="@dimen/text_size_13_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="二网姓名"
            android:textSize="@dimen/text_size_13_sp" />

        <EditText
            android:id="@+id/et_ew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="请填写二网姓名"
            android:maxLength="20"
            android:textSize="@dimen/text_size_13_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="手机号"
            android:textSize="@dimen/text_size_13_sp" />

        <EditText
            android:id="@+id/et_sj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="请填写手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="@dimen/text_size_13_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4S座机号"
            android:textSize="@dimen/text_size_13_sp" />

        <EditText
            android:id="@+id/et_zj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="请填写4S座机号"
            android:maxLength="20"
            android:textSize="@dimen/text_size_13_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/main_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/y30"
        android:text="4S店照片"
        android:textSize="@dimen/text_size_13_sp" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/y30"
        android:src="@mipmap/icon_ml_add" />

    <Button
        android:id="@+id/btn_go"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_button_red_bg"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14_sp" />
</LinearLayout>
