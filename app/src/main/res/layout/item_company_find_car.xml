<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingBottom="@dimen/y20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_14_sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖："
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖"
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_13_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公里："
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/tv_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_13_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离："
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/tv_jl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_13_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车龄："
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/tv_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_13_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jg_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y6"
                android:text="期望价格"
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/tv_jg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x10"
                android:layout_marginTop="@dimen/y6"
                android:text=""
                android:textColor="@color/order"
                android:textSize="@dimen/text_size_16_sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/x30"
        android:textColor="@color/order"
        android:textSize="14dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/y6"
        android:layout_marginRight="@dimen/x30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外观/内饰："
            android:textColor="@color/main_normal_color"
            android:textSize="@dimen/text_size_13_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_13_sp" />
    </LinearLayout>


    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginTop="15dp"
        android:src="@mipmap/logo"
        app:qmui_border_color="@color/white"
        app:qmui_corner_radius="40dp" />

    <LinearLayout
        android:id="@+id/find_edit_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/x30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/find_edit"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y44"
            android:background="@drawable/shape_gradient_blue"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13_sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/find_down"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y44"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/shape_gradient_red"
            android:gravity="center"
            android:text="下架"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13_sp" />

    </LinearLayout>

</RelativeLayout>
