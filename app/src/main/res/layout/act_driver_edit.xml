<?xml version="1.0" encoding="utf-8"?>
<cn.droidlover.xdroid.views.appbar.ToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:leftSrc="@drawable/icon_back2"
    app:titleColor="@color/text_dark"
    app:titleText="员工编辑">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:drawableStart="@drawable/shape_order"
        android:drawablePadding="@dimen/x10"
        android:text="账号信息"
        android:textColor="@color/main_normal_color"
        android:textSize="@dimen/text_size_15_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginEnd="@dimen/x30"
        android:background="@drawable/shape_white_rect_10"
        android:orientation="vertical"
        android:paddingStart="@dimen/x30"
        android:paddingTop="@dimen/y20"
        android:paddingEnd="@dimen/x30"
        android:paddingBottom="@dimen/y30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="角色："
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/edit_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@mipmap/icon_down"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_13_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_13_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/edit_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_13_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车型："
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/edit_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_13_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌："
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/edit_car_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_13_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态："
                android:textColor="@color/main_normal_color"
                android:textSize="@dimen/text_size_13_sp" />

            <TextView
                android:id="@+id/edit_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order"
                android:textSize="@dimen/text_size_13_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:orientation="horizontal"
            android:paddingStart="@dimen/x60"
            android:paddingEnd="@dimen/x60">

            <TextView
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y50"
                android:background="@drawable/shape_gradient_red"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13_sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/x1"
                android:layout_weight="1" />

            <TextView
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y50"
                android:background="@drawable/shape_gradient_blue"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13_sp" />

        </LinearLayout>
    </LinearLayout>

</cn.droidlover.xdroid.views.appbar.ToolBar>