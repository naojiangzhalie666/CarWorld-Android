<?xml version="1.0" encoding="utf-8"?>
<cn.droidlover.xdroid.views.appbar.ToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:leftSrc="@drawable/icon_back2"
    app:titleColor="@color/text_dark"
    app:titleText="司机认证">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/y30"
                android:drawablePadding="@dimen/x10"
                android:text="车辆信息"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16_sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/shape_order" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号" />

                <EditText
                    android:id="@+id/et_cph"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:hint="请输入车牌号"
                    android:paddingStart="@dimen/x30"
                    android:textSize="@dimen/text_size_13_sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/line_grey" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车型选择" />

                <TextView
                    android:id="@+id/tv_cx"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y80"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:hint="车型选择"
                    android:paddingTop="@dimen/y10"
                    android:paddingBottom="@dimen/y10"
                    android:textColor="@color/main_normal_color"
                    android:textSize="@dimen/text_size_15_sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/iv_xsz_zm"
                        android:layout_width="150dp"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_auth_xsz_zm" />

                    <ImageView
                        android:id="@+id/iv_xsz_zm_zt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_auth_xsz_zm"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/iv_xsz_fm"
                        android:layout_width="150dp"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_auth_xsz_fm" />

                    <ImageView
                        android:id="@+id/iv_xsz_fm_zt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_auth_xsz_zm"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/y30"
                android:drawablePadding="@dimen/x10"
                android:text="驾驶证正面"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16_sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/shape_order" />


            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginRight="20dp">


                <ImageView
                    android:id="@+id/iv_jsz_zm"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_rz_zm" />

                <ImageView
                    android:id="@+id/iv_jsz_zm_zt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_auth_shz"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_jsz_bh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:textColor="@color/order"
                android:textSize="@dimen/text_size_13_sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_xsz_bh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:textColor="@color/order"
                android:textSize="@dimen/text_size_13_sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/y30"
                android:drawablePadding="@dimen/x10"
                android:text="交强险"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_16_sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/shape_order" />

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/iv_jqx"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_rz_jqx" />

                <ImageView
                    android:id="@+id/iv_jqx_zt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_auth_shz"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_jqx_bh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:textColor="@color/order"
                android:textSize="@dimen/text_size_13_sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/y30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/x10"
                    android:text="补充信息"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_16_sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/shape_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="（非必填）"
                    android:textColor="@color/order"
                    android:textSize="@dimen/text_size_16_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x30">

                    <ImageView
                        android:id="@+id/iv_hyx"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_rz_hyx" />

                    <ImageView
                        android:id="@+id/iv_hyx_zt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_auth_shz"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_hyx_bh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_hyx"
                        android:layout_marginTop="@dimen/y10"
                        android:textColor="@color/order"
                        android:textSize="@dimen/text_size_13_sp"
                        android:visibility="gone" />
                </RelativeLayout>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="@dimen/x30">

                    <ImageView
                        android:id="@+id/iv_syx"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_rz_syx" />

                    <ImageView
                        android:id="@+id/iv_syx_zt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_auth_shz"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_syx_bh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_syx"
                        android:layout_marginTop="@dimen/y10"
                        android:textColor="@color/order"
                        android:textSize="@dimen/text_size_13_sp"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/main_bg" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <cn.droidlover.xdroid.views.textView.NoDoubleClickButton
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y30"
        android:background="@mipmap/icon_rz_btn"
        android:text="提交认证"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16_sp" />

</cn.droidlover.xdroid.views.appbar.ToolBar>

