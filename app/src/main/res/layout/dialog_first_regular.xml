<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/x50"
    android:layout_marginEnd="@dimen/x50"
    android:background="@drawable/shape_white_rect_10"
    android:orientation="vertical"
    android:paddingTop="@dimen/y30">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="用户服务协议与隐私协议"
        android:textColor="@color/main_normal_color"
        android:textSize="@dimen/text_size_16_sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40"
        android:paddingStart="@dimen/x30"
        android:paddingEnd="@dimen/x30"
        android:text="感谢您信任并使用车无界的产品与服务，依据相关法律要求，我们更新了“用户服务协议与隐私政策”并建议您仔细阅读相关条款。"
        android:textColor="@color/main_normal_color"
        android:textSize="@dimen/text_size_13_sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:paddingStart="@dimen/x30"
        android:paddingEnd="@dimen/x30"
        android:text="点击“我同意”，即代表您已阅读理解并接受"
        android:textColor="@color/main_normal_color"
        android:textSize="@dimen/text_size_13_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/x30"
        android:paddingEnd="@dimen/x30">

        <TextView
            android:id="@+id/tv_regular1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y10"
            android:paddingBottom="@dimen/y10"
            android:text="《用户服务协议》"
            android:textColor="@color/login"
            android:textSize="@dimen/text_size_13_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="与"
            android:textSize="@dimen/text_size_13_sp" />

        <TextView
            android:id="@+id/tv_regular2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y10"
            android:paddingBottom="@dimen/y10"
            android:text="《隐私政策》"
            android:textColor="@color/login"
            android:textSize="@dimen/text_size_13_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="的全部内容。"
            android:textSize="@dimen/text_size_13_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y30"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="暂不使用" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/main_bg" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我同意"
            android:textColor="@color/login"
            android:textSize="@dimen/text_size_16_sp" />
    </LinearLayout>
</LinearLayout>